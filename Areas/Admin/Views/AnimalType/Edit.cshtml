@using ItsyBits.Helpers
@model AnimalType
@{ ViewData["Title"] = "Edit "+@Model.Name; }
<h2>Edit</h2>
<form asp-action="Edit">
    <div class="form-horizontal">
        <h4>Animal type</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
