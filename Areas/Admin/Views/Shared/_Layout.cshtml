<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Admin - ItsyBits</title>
    <link rel="stylesheet" href="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/css/bootstrap.min.css" />
</head>
<body>
    <div class="navbar navbar-inverse">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="sr-only">Toggle navigation</span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a asp-area="" asp-controller="Home" asp-action="Index" class="navbar-brand">ItsyBits</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a asp-controller="Animal" asp-action="Index">Animals</a></li>
                    <li><a asp-controller="AnimalType" asp-action="Index">Animal types</a></li>
                    <li><a asp-controller="Building" asp-action="Index">Buildings</a></li>
                    <li><a asp-controller="BuildingType" asp-action="Index">Building types</a></li>
                    <li><a asp-controller="Upgrade" asp-action="Index">Upgrades</a></li>
                    <li><a asp-controller="User" asp-action="Index">Users</a></li>
                    <li><a asp-controller="Plot" asp-action="Index">Plots</a></li>
                </ul>
                <form asp-area="" asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
                    <ul class="nav navbar-nav navbar-right">
                        <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button></li>
                    </ul>
                </form>
            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer><p>&copy; 2017 - ItsyBits</p></footer>
    </div>
    <script src="https://ajax.aspnetcdn.com/ajax/jquery/jquery-2.2.3.min.js"
            asp-fallback-src="~/lib/jquery/dist/jquery.min.js">
    </script>
    <script src="https://ajax.aspnetcdn.com/ajax/bootstrap/3.3.6/bootstrap.min.js"></script>
    @RenderSection("scripts", required: false)
</body>
</html>
