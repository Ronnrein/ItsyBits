@model UserManageViewModel
@{ ViewData["Title"] = "User"; }
<div class="ui stackable one column grid">
    <div class="column info-column">
        <form class="ui segments form" method="post">
            <div class="ui raised segment field">
                <p class="ui orange ribbon label inline">
                    <label asp-for="UserName"></label>
                </p>
                <input asp-for="UserName" placeholder="Name" />
                <span asp-validation-for="UserName" class="ui pointing red basic label"></span>
            </div>
            <div class="ui two bottom attached buttons">
                <button type="submit" class="ui orange button" name="submit">
                    <i class="pencil icon"></i> Rename
                </button>
                <a asp-controller="Home" asp-action="Index" class="ui default button">
                    <i class="backward icon"></i> Back
                </a>
            </div>
        </form>
    </div>
</div>