@model ItsyBits.Models.ViewModels.Store.StoreAnimalUpgradeViewModel
@{
    ViewData["Title"] = "Buy animal upgrade";
    Upgrade upgrade = (Upgrade) ViewData["Upgrade"];
}
<div class="ui stackable two column grid">
    <div class="column info-column">
        <form class="ui segments form" method="post">
            <div class="ui raised segment secondary">
                <h4 class="inline">Buy a @upgrade.Name</h4>
                <p class="right floated">
                    <i class="ui money icon"></i>
                    @upgrade.Price
                </p>
            </div>
            <div class="ui raised segment">
                <p class="ui orange ribbon label">Description</p>
                <p>@upgrade.Description</p>
            </div>
            <div class="ui raised segment field">
                <p class="ui orange ribbon label inline">
                    <label asp-for="AnimalId"></label>
                </p>
                <div class="ui selection dropdown">
                    <input type="hidden" asp-for="AnimalId" />
                    <i class="dropdown icon"></i>
                    <div class="default text">Select animal</div>
                    <div class="menu">
                        @foreach (Animal animal in (IEnumerable<Animal>)ViewData["AnimalId"]) {
                            <div class="item" data-value="@animal.Id">
                                <img class="ui mini avatar image" src="/images/animals/@animal.Type.SpritePath/portrait.png" />
                                @animal.Name
                            </div>
                        }
                    </div>
                </div>
                <span asp-validation-for="AnimalId" class="ui pointing red basic label"></span>
            </div>
            <div class="ui two bottom attached buttons">
                <button type="submit" class="ui orange button"><i class="add to cart icon"></i> Buy</button>
                <a asp-controller="Store" asp-action="Index" class="ui default button">Back</a>
            </div>
        </form>
    </div>
    <div class="column">
        <div class="ui raised segment ray-image-container">
            <img class="ui centered small image" src="~/images/upgrades/@upgrade.SpritePath" />
        </div>
    </div>
</div>