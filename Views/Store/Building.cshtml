@model Building
@{
    BuildingType type = (BuildingType)ViewData["BuildingType"];
}
<h1>Buy a new @type.Name</h1>
<div class="ui container">
    <img class="ui centered big image" src="~/images/buildings/@type.SpritePath/portrait.png" />
</div>
<form class="ui massive form" method="post">
    <div class="two field">
        <div class="field">
            <label>What would you like to name your building?</label>
            <input asp-for="Name" />
        </div>
        <div class="field">
            <label>Where would you like to place your building? (PLACEHOLDER FOR TOWN)</label>
            <div class="ui selection dropdown">
                <input type="hidden" name="PlotId" />
                <i class="dropdown icon"></i>
                <div class="default text">Select plot</div>
                <div class="menu">
                    @foreach (Plot plot in (IEnumerable<Plot>)ViewData["BuildingPlot"]) {
                        <div class="item" data-value="@plot.Id">
                            <img class="ui mini avatar image" src="/images/buildings/empty_icon.jpg" />
                            @plot.Description
                        </div>
                    }
                </div>
            </div>

    </div>
    <input type="submit" class="ui orange button" value="Buy" />
    <a asp-controller="Store" asp-action="Index" class="ui default button">Back</a>
</form>