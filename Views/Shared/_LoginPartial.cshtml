@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager

@if (SignInManager.IsSignedIn(User)) {
    <form asp-controller="Account" asp-action="Logout" method="post" id="logoutForm" class="navbar-right">
        <ul class="nav navbar-nav navbar-right">
            @if (User.IsInRole("Administrator")) {
                <li class="dropdown">
                    <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button">Admin <span class="caret"></span></a>
                    <ul class="dropdown-menu">
                        <li><a asp-area="Admin" asp-controller="AnimalType" asp-action="Index">Animal types</a></li>
                        <li><a asp-area="Admin" asp-controller="BuildingType" asp-action="Index">Building types</a></li>
                        <li><a asp-area="Admin" asp-controller="Upgrade" asp-action="Index">Upgrades</a></li>
                    </ul>
                </li>
            }
            <li><a asp-controller="Manage" asp-action="Index" title="Manage">Hello @UserManager.GetUserName(User)!</a></li>
            <li><button type="submit" class="btn btn-link navbar-btn navbar-link">Log out</button></li>
        </ul>
    </form>
}
else {
    <ul class="nav navbar-nav navbar-right">
        <li><a asp-controller="Account" asp-action="Register">Register</a></li>
        <li><a asp-controller="Account" asp-action="Login">Log in</a></li>
    </ul>
}
