<!DOCTYPE html>
<html>
<head>
    @await Html.PartialAsync("_HeadPartial")
</head>
<body class="main-body">
@await Html.PartialAsync("_SidebarPartial")
<div class="pusher full-height">
    @await Html.PartialAsync("_NavigationPartial")
    <div class="ui equal width padded grid main-grid">
        <div class="computer tablet only column left-column">
            @await Component.InvokeAsync("UserSummary")
        </div>
        <div class="column main-container">
            <div class="ui segments">
                <div class="ui segment secondary">
                    <h3 class="inline">@ViewData["Title"]</h3>
                    @await Html.PartialAsync("_BreadcrumbPartial")
                </div>
                @await Html.PartialAsync("_ResultPartial")
                <div class="ui segment main-segment">
                    @RenderBody()
                </div>
            </div>
        </div>
    </div>
    @await Html.PartialAsync("_ScriptsPartial")
    @RenderSection("scripts", required: false)
</div>
</body>
</html>
