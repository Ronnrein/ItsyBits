@model ForgotPasswordViewModel
@{
    Layout = "_BasicLayout";
}
<body class="Account-body">
    <div class="ui one column center aligned grid">
        <div class="column six wide">
            <h2>@ViewData["Title"]</h2>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" class="form-horizontal"> 
                <div id="loginform" class="ui segment form">
                    <img class="Logo" src="~/images/ItsyBitsLogo.png" />
                    <h2>Forgot your password?</h2>
                    <hr />
                    <div asp-validation-summary="All" class="text-danger"></div>
                    <div class="field">
                        <h3>Please enter your e-mail below</h3>
                        <div class="col-md-10">
                            <input asp-for="Email" class="form-control" placeholder="user@user.com" />
                            <span asp-validation-for="Email" class="text-danger"></span>
                        </div>
                    </div>
                    <div class="field">
                         <a class="ui button orange" asp-action="Login">Back</a>
                         <button type="submit" class="ui button green">Submit</button>
                    </div>
                </div>
            </form>
         </div>
      </div>
</body>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
