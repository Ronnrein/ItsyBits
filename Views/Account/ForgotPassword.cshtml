@model ForgotPasswordViewModel
@{
    Layout = "_BasicLayout";
    ViewData["Title"] = "Reset password";
}
<div class="ui three column stackable grid">
    <div class="column"></div>
    <div class="column">
    <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form"> 
        <div class="ui segment form account-form">
            <h2 class="center aligned header account-header">Reset password</h2>
            <div class="field">
                <h3>Please enter your e-mail below</h3>
                <span asp-validation-for="Email" class="ui orange left pointing label"></span>
                <input asp-for="Email" class="field" placeholder="user@user.com" />   
            </div>
            <div class="field">
                <a class="ui button orange" asp-action="Login">Back</a>
                <button type="submit" class="ui button green">Reset</button>
            </div>
        </div>
    </form>
    </div>
    <div class="column"></div>
</div>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
