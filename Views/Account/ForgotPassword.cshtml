@model ForgotPasswordViewModel
@{
    Layout = "_BasicLayout";
}
<body class="Account-body">
    <div class="ui one column center aligned grid">
        <div class="column six wide">
            <h2>@ViewData["Title"]</h2>
            <form asp-controller="Account" asp-action="ForgotPassword" method="post" role="form"> 
                <div id="loginform" class="ui segment form">
                    <img class="Logo" src="~/images/ItsyBitsLogo.png" />
                    <h2>Forgot your password?</h2>
                    <hr />
                    <div class="field">
                        <h3>Please enter your e-mail below</h3>
                        <span asp-validation-for="Email" class="ui orange left pointing label"></span>
                        <input asp-for="Email" class="field" placeholder="user@user.com" />   
                    </div>
                    <div class="field">
                         <a class="ui button orange" asp-action="Login">Back</a>
                         <button type="submit" class="ui button green">Submit</button>
                    </div>
                </div>
            </form>
         </div>
      </div>
</body>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}
