@model Building
@{ ViewData["Title"] = Model.Name; }
<div class="ui stackable two column grid">
    <div class="column">
        <div class="ui segments">
            <div class="ui raised segment secondary">
                <div class="ui breadcrumb">
                    <a class="section" asp-controller="Home" asp-action="Index">Home</a>
                    <div class="divider"> / </div>
                    <a class="section" asp-controller="Building" asp-action="Index">Buildings</a>
                    <div class="divider"> / </div>
                    <div class="active section">@Model.Name</div>
                </div>
            </div>
            <div class="ui raised segment">
                <p class="ui orange ribbon label">Statistics</p>
                <div class="ui four small statistics">
                    <div class="statistic">
                        <div class="value">
                            @Model.Animals.Count
                        </div>
                        <div class="label">
                            animals
                        </div>
                    </div>
                    <div class="statistic">
                        <div class="value">
                            @Model.Capacity
                        </div>
                        <div class="label">
                            capacity
                        </div>
                    </div>
                    <div class="statistic">
                        <div class="value">
                            @Model.Reward
                        </div>
                        <div class="label">
                            value
                        </div>
                    </div>
                    <div class="statistic">
                        <div class="value">
                            @Model.BuildingUpgrades.Count
                        </div>
                        <div class="label">
                            upgrades
                        </div>
                    </div>
                </div>
            </div>
            <div class="ui raised segment">
                <p class="ui orange ribbon label">Upgrades</p>
                <div class="upgrades clearfix" >
                    <a asp-controller="Store" asp-action="Index">
                        <img class="ui mini bordered circular image left floated tooltip" data-content="Buy upgrades" src="~/images/upgrades/upgrade.png" />
                    </a>
                    @foreach (Upgrade upgrade in Model.Upgrades) {
                        <a asp-controller="Store" asp-action="BuildingUpgrade" asp-route-id="@upgrade.Id">
                            <img class="ui mini bordered circular image left floated tooltip" data-content="@upgrade.Name" src="~/images/upgrades/@upgrade.SpritePath" />
                        </a>
                    }
                </div>
            </div>
            <div class="ui raised segment">
                <p class="ui orange ribbon label">Status</p>
                <p>@Model.GetStatusText()</p>
            </div>
            <div class="ui raised segment">
                <div class="ui small indicating progress progressbar tooltip" data-content="@Model.HappinessPercentage%" data-value="@Model.HappinessPercentage" data-total="100">
                    <div class="bar"></div>
                    <div class="label">Happiness</div>
                </div>
            </div>
        </div>
    </div>
    <div class="column">
        <div class="ui raised segment animal-image-container">
            <img class="ui centered big image" src="~/images/buildings/@Model.Type.SpritePath/full.png"/>
        </div>
    </div>
</div>
<div class="ui cards">
    @foreach(Animal animal in Model.Animals) {
        @Html.Partial("~/Views/Animal/_AnimalCardPartial.cshtml", animal)
    }
</div>