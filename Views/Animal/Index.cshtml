@model IEnumerable<BuildingViewModel>
@{ ViewData["Title"] = "My animals"; }
@foreach (BuildingViewModel building in Model.Where(b => b.Animals.Count() != 0)) {
    <div class="ui segment secondary mid-segment-header">
        <h4>@building.Name</h4>
    </div>
    <div class="ui cards">
        @foreach (AnimalViewModel animal in building.Animals) {
            @Html.Partial("/Views/Animal/_AnimalCardPartial.cshtml", animal)
        }
    </div>
}