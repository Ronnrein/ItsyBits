@model Animal
@{ ViewBag.Title = "Info for "+Model.Name; }
<h1>@Model.Name, type @Model.Type.Name, lives in "@Html.ActionLink(Model.Building.Name, "Details", "Building", new { id = Model.Building.Id })" building</h1>
<h3>Needs</h3>
<table class="table">
    <tr>
        <td class="col-md-3">Well fed</td>
        <td class="col-md-6">
            <div class="progress">
                <div class="progress-bar progress-bar-success progress-bar-striped active" role="progressbar" style="width: @Model.FeedPercentage%">@Model.FeedPercentage%</div>
            </div>
        </td>
        <td class="col-md-3 text-right">
            @using (Html.BeginForm("Feed", "Animal")) {
                <button class="btn btn-default" type="submit">Feed</button>
            }
        </td>
    </tr>
    <tr>
        <td class="col-md-3">Rested</td>
        <td class="col-md-6">
            <div class="progress">
                <div class="progress-bar progress-bar-info progress-bar-striped active" role="progressbar" style="width: @Model.SleepPercentage%">@Model.SleepPercentage%</div>
            </div>
        </td>
        <td class="col-md-3 text-right">
            @using (Html.BeginForm("Sleep", "Animal")) {
                <button class="btn btn-default" type="submit">Sleep</button>
            }
        </td>
    </tr>
    <tr>
        <td class="col-md-3">Loved</td>
        <td class="col-md-6">
            <div class="progress">
                <div class="progress-bar progress-bar-warning progress-bar-striped active" role="progressbar" style="width: @Model.PetPercentage%">@Model.PetPercentage%</div>
            </div>
        </td>
        <td class="col-md-3 text-right">
            @using (Html.BeginForm("Pet", "Animal")) {
                <button class="btn btn-default" type="submit">Pet</button>
            }
        </td>
    </tr>
    <tr>
        <td>Overall</td>
        <td colspan="2">
            <div class="progress">
                <div class="progress-bar progress-bar-danger progress-bar-striped active" role="progressbar" style="width: @Model.HappinessPercentage%">@Model.HappinessPercentage%</div>
            </div>
        </td>
    </tr>
</table>