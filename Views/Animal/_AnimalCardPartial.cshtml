@model AnimalViewModel
<a asp-controller="Animal" asp-action="Details" asp-route-id="@Model.Id"  class="ui card">
    <div class="image ray-image-container">
        <img src="~/images/animals/@Model.SpritePath/portrait.png"/>
    </div>
    <div class="content">
        <h2 class="names">
            @Model.Name
            <i class="@(Model.Male ? "man" : "woman") icon"></i>
        </h2>
        <div class="meta">
            <p>@Model.Age old</p>
        </div>
        <div class="description">
            @Model.StatusText
        </div>
        <div class="ui divider"></div>
        <div class="extra content">
            <div class="ui three column grid">
                <div class="row">
                    <div class="column">
                        <div class="ui indicating small progress progressbar tooltip" data-content="@Model.FeedPercentage%" data-value="@Model.FeedPercentage" data-total="100">
                            <div class="bar"></div>
                            <div class="label">Fed</div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="ui indicating small progress progressbar tooltip" data-content="@Model.SleepPercentage%" data-value="@Model.SleepPercentage" data-total="100">
                            <div class="bar"></div>
                            <div class="label">Rested</div>
                        </div>
                    </div>
                    <div class="column">
                        <div class="ui indicating small progress progressbar tooltip" data-content="@Model.PetPercentage%" data-value="@Model.PetPercentage" data-total="100">
                            <div class="bar"></div>
                            <div class="label">Loved</div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</a>